<web-app version="2.5"
		 xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- Servlets -->

	<display-name>Germinate 3 Gatekeeper</display-name>

	<!-- LISTENERS -->
	<listener>
		<listener-class>jhi.gatekeeper.server.util.ApplicationListener</listener-class>
	</listener>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>gatekeeper.jsp</welcome-file>
	</welcome-file-list>

	<!--  force IE standards mode -->
	<filter-mapping>
		<filter-name>HeaderFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Add a Filter that forces the browser NOT to cache .nocache files -->
	<filter-mapping>
		<filter-name>GWTCacheControlFilter</filter-name>
		<url-pattern/>
	</filter-mapping>

</web-app>
