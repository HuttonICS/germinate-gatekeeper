<ui:UiBinder xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:ui='urn:ui:com.google.gwt.uibinder'>

	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:with field="msg" type="jhi.gatekeeper.client.i18n.I18n"/>

	<b:Panel>
		<g:Label styleName="{PANEL_HEADING}" text="{msg.viewUserGatekeeperAccessHeading}"/>
		<g:FlowPanel styleName="{PANEL_BODY}">
			<b:CheckBox text="{msg.viewUserGatekeeperAccessText}" ui:field="hasAccess"/>
		</g:FlowPanel>
	</b:Panel>
</ui:UiBinder>