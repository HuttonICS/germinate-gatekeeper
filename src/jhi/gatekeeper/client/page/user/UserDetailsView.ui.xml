<ui:UiBinder xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:ui='urn:ui:com.google.gwt.uibinder'>

	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:with field="msg" type="jhi.gatekeeper.client.i18n.I18n"/>

	<b:Panel>
		<b:PanelHeader text="{msg.viewUserDetailsHeading}"/>
		<b:PanelBody>
			<g:Label text="{msg.viewUserDetailsPlaceholder}" ui:field="message"/>
			<b:Description horizontal="true" visible="false" ui:field="description">
				<b:DescriptionTitle text="{msg.viewUserDetailsTitleUsername}"/>
				<b:DescriptionData ui:field="username"/>
				<b:DescriptionTitle text="{msg.viewUserDetailsTitleFullName}"/>
				<b:DescriptionData ui:field="fullName"/>
				<b:DescriptionTitle text="{msg.viewUserDetailsTitleEmailAddress}"/>
				<b:DescriptionData ui:field="email"/>
				<b:DescriptionTitle text="{msg.viewUserDetailsTitleInstitution}"/>
				<b:DescriptionData ui:field="institution"/>
				<b:DescriptionTitle text="{msg.viewUserDetailsTitleCreatedOn}"/>
				<b:DescriptionData ui:field="createdOn"/>
			</b:Description>
		</b:PanelBody>
	</b:Panel>
</ui:UiBinder>