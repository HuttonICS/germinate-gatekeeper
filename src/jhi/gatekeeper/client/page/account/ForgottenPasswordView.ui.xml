<ui:UiBinder xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:w='urn:import:jhi.gatekeeper.client.widget'>

	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:import field="jhi.gatekeeper.client.util.Classes.*"/>
	<ui:with field="msg" type="jhi.gatekeeper.client.i18n.I18n"/>

	<b:Panel>
		<g:Label styleName="{PANEL_HEADING}" text="{msg.forgottenPasswordHeading}"/>
		<g:FlowPanel styleName="{PANEL_BODY}" ui:field="content">
			<b:FormGroup>
				<w:BootstrapInputGroup fa="{FA_USER}" label="{msg.forgottenPasswordUsernamePlaceholder}" placeholder="{msg.forgottenPasswordUsernamePlaceholder}"
									   type="TEXT" ui:field="username"/>
			</b:FormGroup>
			<b:FormGroup>
				<w:BootstrapInputGroup fa="{FA_ENVELOPE}" label="{msg.forgottenPasswordEmailPlaceholder}" placeholder="{msg.forgottenPasswordEmailPlaceholder}"
									   type="TEXT" ui:field="email"/>
			</b:FormGroup>
		</g:FlowPanel>
		<g:FlowPanel styleName="{PANEL_FOOTER} {CLEARFIX}">
			<b:Button addStyleNames="{PULL_RIGHT}" text="{msg.genericButtonSend}" type="PRIMARY" ui:field="button"/>
		</g:FlowPanel>
	</b:Panel>
</ui:UiBinder>