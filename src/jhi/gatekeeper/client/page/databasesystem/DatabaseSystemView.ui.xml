<ui:UiBinder xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:gk='urn:import:jhi.gatekeeper.client.widget.pagination'
			 xmlns:gkv='urn:import:jhi.gatekeeper.client.page.user'
			 xmlns:ui='urn:ui:com.google.gwt.uibinder'>

	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:with field="msg" type="jhi.gatekeeper.client.i18n.I18n"/>

	<g:FlowPanel>
		<b:Panel>
			<g:Label styleName="{PANEL_HEADING}" text="{msg.databaseSystemHeading}"/>
			<gk:DatabaseSystemTable/>
		</b:Panel>
		<b:Panel>
			<g:Label styleName="{PANEL_HEADING}" text="{msg.addDatabaseSystemHeading}"/>
			<g:FlowPanel styleName="{PANEL_BODY}">
				<gkv:UserAddNew ui:field="newDb"/>
			</g:FlowPanel>
			<g:FlowPanel styleName="{PANEL_FOOTER} {CLEARFIX}">
				<b:Button addStyleNames="{PULL_RIGHT}" text="{msg.genericButtonAdd}" type="PRIMARY" ui:field="button"/>
			</g:FlowPanel>
		</b:Panel>
	</g:FlowPanel>
</ui:UiBinder>