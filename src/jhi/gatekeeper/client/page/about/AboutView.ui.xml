<ui:UiBinder xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:g8='urn:import:jhi.gatekeeper.client.widget'
			 xmlns:ui='urn:ui:com.google.gwt.uibinder'>

	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:import field="jhi.gatekeeper.client.util.Classes.*"/>
	<ui:with field="msg" type="jhi.gatekeeper.client.i18n.I18n"/>

	<ui:style>
		.column {
			display: inline-block;
			vertical-align: middle;
			float: none;
			text-align: center;
		}

		.column img {
			width: 100%;
			max-width: 400px;
		}

		.banner {
			margin-bottom: 20px;
		}
	</ui:style>

	<g:FlowPanel>
		<g:SimplePanel addStyleNames="{style.banner}" ui:field="banner"/>
		<b:Panel>
			<b:PanelHeader text="{msg.aboutHeading}"/>
			<g:FlowPanel styleName="{PANEL_BODY}">
				<g:HTML ui:field="message"/>

				<b:Row>
					<b:Column addStyleNames="{COL_XXS_12} {style.column}" size="XS_6, SM_4">
						<g8:AnchorWithContent target="_blank" ui:field="germinateAnchor">
							<g:Image ui:field="germinate"/>
						</g8:AnchorWithContent>
					</b:Column>
					<b:Column addStyleNames="{COL_XXS_12} {style.column}" size="XS_6, SM_4">
						<g8:AnchorWithContent target="_blank" ui:field="huttonAnchor">
							<g:Image ui:field="hutton"/>
						</g8:AnchorWithContent>
					</b:Column>
					<b:Column addStyleNames="{COL_XXS_12} {style.column}" size="XS_6, SM_4">
						<g8:AnchorWithContent target="_blank" ui:field="icsAnchor">
							<g:Image ui:field="ics"/>
						</g8:AnchorWithContent>
					</b:Column>
				</b:Row>
			</g:FlowPanel>
		</b:Panel>
	</g:FlowPanel>
</ui:UiBinder>