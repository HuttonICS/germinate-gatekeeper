<ui:UiBinder xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:ui='urn:ui:com.google.gwt.uibinder'>

	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:with field="msg" type="jhi.gatekeeper.client.i18n.I18n"/>

	<ui:style>
		.button-panel button {
			margin-right: 4px;
		}

		.button-panel button:first-child {
			margin-right: 0;
		}
	</ui:style>

	<b:Panel>
		<g:Label styleName="{PANEL_HEADING}" text="{msg.approveUserDecisionHeading}"/>
		<g:Label styleName="{PANEL_BODY}" text="{msg.approveUserDecisionText}"/>
		<g:FlowPanel styleName="{PANEL_FOOTER} {CLEARFIX} {style.button-panel}" ui:field="footer">
			<b:Button addStyleNames="{PULL_RIGHT}" text="{msg.genericButtonApprove}" type="PRIMARY" ui:field="approve"/>
			<b:Button addStyleNames="{PULL_RIGHT}" text="{msg.genericButtonReject}" ui:field="reject"/>
			<b:Button addStyleNames="{PULL_RIGHT}" text="{msg.genericButtonDelete}" ui:field="delete"/>
		</g:FlowPanel>
	</b:Panel>
</ui:UiBinder>